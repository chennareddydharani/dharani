public class Ceaser {
    public static void main(String[] args) {
        String text = "Hello World";
        int key = 3;

        String en = encrypt(text, key);
        System.out.println("PlainText: " + text);
        System.out.println("CipherText: " + en);

        String de = decrypt(en, key);
        System.out.println("DecryptedText: " + de);
    }

    public static String encrypt(String text, int key) {
        StringBuilder res = new StringBuilder();
        key = key % 26;

        for (char ch : text.toCharArray()) {
            if (Character.isLetter(ch)) {
                char base = Character.isUpperCase(ch) ? 'A' : 'a';
                char enc = (char) ((ch - base + key + 26) % 26 + base);
                res.append(enc);
            } else {
                res.append(ch); // keep spaces & punctuation as it is
            }
        }
        return res.toString();
    }

    public static String decrypt(String text, int key) {
        return encrypt(text, -key); // reverse shift
    }
}

